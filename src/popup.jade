// Status bar overlay for fullscreen mode
.statusbar-overlay
// Panels overlay
.panel-overlay
// Left panel with reveal effect
.panel.panel-right.panel-reveal
  .title-block 设置
  .content-block
    form#my-form.store-data
      ul.panel-list
        li
          a(href="about.html", data-view=".view-main" class="wide-screen").close-panel
            .item-inner
              .item-title 开发者博客
              .item-media
                i.iconfont.icon-qmark
        li 
          .item-content
            .item-inner
              .item-title.label 横屏模式
              .item-input
                label.label-switch
                  input(type='checkbox' name="" id="isWideScreen")
                  .checkbox
        li 
          .item-content
            .item-inner
              .item-title.label 夜间模式
              .item-input
                label.label-switch
                  input(type='checkbox' name="" id="isDark")
                  .checkbox
        li.add-site
          .item-content
            .item-inner
              .item-input
                input(type='url', placeholder='URL' id="addSite")
              .item-submit
                input(type="button", id="submit" value="打开").button
              
                       
    //- .commend-badge
    //-   i.iconfont.icon-commend
    //-   span 推荐
    a.button.button-big.fixed-bottom(href="https://github.com/cyio/ReadX" target="_blank").external 访问项目主页
    //a(href="about.html", data-view=".view-main").button.close-panel
// Views
.views
  // Left view
  .view.view-left.navbar-through
    //.navbar
    //  .navbar-inner
    //    .center.sliding Left View
    .pages
      .page(data-page='popup-left').left
        .list-block.sortable
          ul.left-nav
        <a href="#" data-sortable=".sortable" class="toggle-sortable" title="Toggle sortable"><img src="/img/sortable.jpg"></a>
    //   //left for nav
  // Right view, it is main view
  .view.view-main.navbar-through
    .navbar
      .navbar-inner
        .main-title.sliding ReadX
        .right
          a(href="#", data-panel="left").link.open-panel.icon-only
            i.icon.icon-bars
    // Pages
    .pages
      // Page, data-page contains page name
      .page(data-page='popup')
        // Scrollable page content
        .page-content
          .list-block
            span.preloader
            ul              
    .operation-over
      i.fa.fa-arrow-circle-up.gotop
.overlay
